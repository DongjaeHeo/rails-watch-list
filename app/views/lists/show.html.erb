<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <h3>My List</h3>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
          <li class="nav-item active">
            <h4><%= link_to 'Add a new movie', new_list_bookmark_path(@list) %></h4>
          </li>
      </ul>
    </div>
  </div>
</div>



<div class="container pt-5">
  <h1><%= @list.name %></h1>
  <div class="container-fluid d-flex justify-content-between">
    <% @bookmarks.each do |bookmark| %>
      <div class="d-flex"><%= link_to movie_path(bookmark.movie) do %>
        <%= image_tag bookmark.movie.poster_url, alt: "movie poster", width: 200 %>
          <p><%= bookmark.movie.title%></p>
          <p><%= bookmark.comment %></p>
        <% end %>
      </div>
    <% end %>
  </div>
</div>




<%= link_to 'Delete the list', list_path(@list), data: { turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
