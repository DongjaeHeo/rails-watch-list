  <div class="container-fluid">
    <h3><%= link_to "Home", root_path %></h3>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
          <li class="nav-item active">
            <%= simple_form_for :query, url: movies_path, method: "GET", html: { class: 'form-inline' } do |f| %>
              <div class="d-flex align-items-center">
                <div class="box mt-0 " style="font-size: 0px"><%= f.input :title, input_html: {value: ""}, style: 'margin-bottom: 0px;'%></div>
                <div class="box ms-3 mb-2"><%= f.submit "Search", class: "btn btn-primary" %></div>
              </div>
            <% end %>
          </li>
          <li class="nav-item ms-3 mt-2">
            <div class=""><h3><%= link_to 'My list', lists_path  %></h3></div>
          </li>
      </ul>
    </div>
  </div>
</div>

<div class="container pt-5">
  <ul>
    <h1><%= @movie.title %></h1>
    <%= image_tag @movie.poster_url, alt: "movie poster", width: 200 %>
    <p>Overview: <%= @movie.overview %></p>
    <p>Rating: <%= @movie.rating %></p>
  </ul>

  <%= link_to 'Edit', edit_movie_path(@movie) %>
  <%= link_to 'Delete', movie_path(@movie), data: { turbo_method: :delete, turbo_confirm: "Are you sure?"} %>

</div>
